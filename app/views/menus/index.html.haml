%h1 All Menus

= form_tag menus_path, :method => :get, id: "menus_form" do
  - @meals.each do |meal|
    = meal
    = radio_button_tag "meal", 1, @selected_meal.include?(meal), :id => "#{meal}"
  %br
  - @locations.each do |location|
    = location
    = radio_button_tag "location", 1, @selected_location.include?(location), :id => "#{location}"
  = submit_tag 'Submit', id: "menus_submit"