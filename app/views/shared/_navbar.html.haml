.navbar-container.clear
  .container
    .navbar-content-container.left.clear
      #logo.left
        %a{:href => menus_path}
          %i.fa.fa-cutlery{"aria-hidden" => "true"}
      - if user_signed_in? && current_user.admin?
        .navbar-item.left
          = link_to 'Pending', pending_path
        .navbar-item.left
          = link_to 'Disapproved', disapproved_path
        .navbar-item.left
          = link_to 'Adminusers', adminuser_path
    .navbar-content-container.right
      - if user_signed_in?
        .dropdown
          .navbar-item
            = current_user.email
            %i.fa.fa-caret-down{"aria-hidden" => "true"}
          .dropdown-content
            = link_to 'My account', edit_user_registration_path, {:class => 'navbar-item'} 
            = link_to'Sign out', destroy_user_session_path, {:method => :delete, :class => 'navbar-item'}

      - else
        .right.clear
          .navbar-item.left
            = link_to "Signin", new_user_session_path
          .navbar-item.left
            = link_to "Sign up", new_user_registration_path